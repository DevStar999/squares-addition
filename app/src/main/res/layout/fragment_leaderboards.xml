<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".LeaderboardsFragment">

    <FrameLayout
        android:id="@+id/leaderboards_fragment_title_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_fragment_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_leaderboards_fragment_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scrollHorizontally="false"
            android:text="LEADERBOARDS"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/title_back_leaderboards_fragment_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/click_button_small"
            android:contentDescription="Back button for closing LeaderboardsFragment"
            android:padding="6dp"
            app:srcCompat="@drawable/back_arrow" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/buttons_linear_layout_leaderboards_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:orientation="vertical"
        android:showDividers="middle"
        android:divider="@drawable/gap_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/leaderboards_fragment_title_frame_layout">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/show_leaderboards_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/click_button"
            android:paddingVertical="16dp"
            android:paddingHorizontal="24dp"
            android:text="SHOW LEADERBOARDS"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/leaderboards_top_25_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/click_button"
            android:paddingVertical="16dp"
            android:paddingHorizontal="24dp"
            android:text="LEADERBOARDS - TOP 25"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/leaderboards_peer_25_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/click_button"
            android:paddingVertical="16dp"
            android:paddingHorizontal="24dp"
            android:text="LEADERBOARDS - PEER 25"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/open_info_dialog_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/click_button"
            android:paddingVertical="16dp"
            android:paddingHorizontal="24dp"
            android:text="OPEN INFO DIALOG"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>